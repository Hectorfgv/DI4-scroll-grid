<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginRight="2.5dp">

        <LinearLayout
            android:id="@+id/layoutAlbumes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#000000">

            <TextView
                android:id="@+id/albumRojo"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:text="Album 1"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#ff0000"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/albumAzul"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:text="Album 2"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#005eff"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/albumVerde"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:text="Album 3"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#4bf900"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/albumNaranja"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:text="Album 4"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#f99a00"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>



    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="2.5dp">


        <GridLayout
            android:id="@+id/layoutFotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:rowCount="40"
            android:columnCount="2">
        </GridLayout>

    </ScrollView>


</LinearLayout>
